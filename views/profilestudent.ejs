         <h1>   <%=student.username%></h1>
          </div>
          <div class="card-body">
            <form action="/changepass" method="POST">
  
              <b><pre style="font-family: 'Times New Roman', Times, serif;">Register number:</b><input type="text" value="<%= student.username%>" name="username" readonly></pre><br>
             <b> <pre style="font-family: 'Times New Roman', Times, serif;">New password   :</b><input type="password" name="newpassword" ></pre><br>
             
             
                 <input type="submit" value="changepassword" style="background-color: rgba(252, 16, 16, 0.5);"> 
             </form>
            </div>
            </div>
            <div class="card shadow-sm" style=" margin-top: 40px;">
            <div class="card-body">
              <div class="card-header bg-transparent text-center">
                <h2>Applied Events:</h2>
                 </div>
                 <table class="table ">
                <% if(links.length != 0) { %>
                <% links.forEach(function(links1) { 
                 
                  %>
                  
               <tr>
                <th><a href= "/eventdisplaystudent/<%=links1.eventid%>/<%= student.username %>"><%=links1.type%>-<%=links1.companyname%> </a><br></th>
                </tr>
                <%
                }); %>
                <% } else { %>
                <tr><th>---- -------</th></tr>
                <tr><th>---- -------</th></tr>
                <% } %>
