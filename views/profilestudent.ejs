<!-- Student Profile -->
<div class="student-profile py-4">
  <div class="container">
    <div class="row">
      <div class="col-lg-8" >
        <div class="card shadow-sm" ">
          <div class="card-header bg-transparent border-0">
            <h3 class="mb-0"><i class="far fa-clone pr-1" ></i>General Information</h3>
          </div>
        
          <div class="card-body pt-0">
            	
            <table class="table table-hover ">
              

                <th width="30%">Register Number</th>
                <td width="2%">:</td>
                <td><%=student.username%></td>
              <tr>
                <th width="30%">Student Name	</th>
                <td width="2%">:</td>
                
                <td><%=student.name%></td>
              </tr>
              <tr>
                <th width="30%">Email</th>
                <td width="2%">:</td>
               
                <td><%=student.email%></td>
              </tr>
              <tr>
                <th width="30%">Phone</th>
                <td width="2%">:</td>
              
                <td><%=student.mobile%></td>
              </tr>
              <tr>
                <th width="30%">Address</th>
                <td width="2%">:</td>
               
                <td><%=student.address%></td>
              </tr>
<tr>
                <th width="30%">Gender</th>
                <td width="2%">:</td>
               
                <td><%=student.gender%></td>
              </tr>
<tr>
                <th width="30%">10th Mark(in %)</th>
                <td width="2%">:</td>
              
                <td><%=student.tenth%></td>
              </tr>
<tr>
                <th width="30%">12th mark(in %)</th>
                <td width="2%">:</td>
               
                <td><%=student.twelth%></td>
              </tr>
<tr>
                <th width="30%">Department</th>
                <td width="2%">:</td>
               
                <td><%=student.department%></td>
              </tr>
<tr>
                <th width="30%">CGPA</th>
                <td width="2%">:</td>
               
                <td><%=student.cgpa%></td>
              </tr>
<tr>
                <th width="30%">Year of Pass</th>
                <td width="2%">:</td>
               
                <td><%=student.yearofpass%> </td>
              </tr>
<tr>
                <th width="30%">Current year</th>
                <td width="2%">:</td>
               
                <td><%=student.currentyear%></td>
              </tr>
            </tr>
            <tr>
                            <th width="30%">Course</th>
                            <td width="2%">:</td>
                           
                            <td><%=student.course%></td>
                          </tr>
                        </tr>
                        <tr>
                                        <th width="30%">History of arrears</th>
                                        <td width="2%">:</td>
                                       
                                        <td><%=student.history%></td>
                                      </tr>
                                    </tr>
                                    <tr>
                                                    <th width="30%">Number of baclogs</th>
                                                    <td width="2%">:</td>
                                                   
                                                    <td><%=student.backlog%></td>
                                                  </tr>
<tr>
                <th width="30%">Skills</th>
                <td width="2%">:</td>
               
                <td><%=student.skills%></td>
              </tr>
              <tr>
                <th width="30%">resume link</th>
                <td width="2%">:</td>
               
                <td><a href="<%=student.resume%>"><%=student.resume%></td>
              </tr>
            </table>
            
            
